{% extends 'base.html.twig' %}

{% block title %}Hello in category!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for product in products %}
        <div>
            <div><span>{{ product.name }}</span></div>
            <div><span>{{ product.price }}</span></div>
            <div><span>{{ product.previewText }}</span></div>
            <div><span>{{ product.image }}</span></div>
            <div><span>{{ product.createdAt|date("F jS \\a\\t g:ia") }}</span></div>
            <div><span>{{ product.updatedAt|date("F jS \\a\\t g:ia") }}</span></div>
        </div>
    {% endfor %}
</div>
{% endblock %}
